@page
@model QuangThienDungRazorPages.Pages.Staff.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Profile</h2>
        <a href="/" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Profile Information</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.AccountName" class="form-label">Full Name *</label>
                            <input asp-for="Input.AccountName" class="form-control" />
                            <span asp-validation-for="Input.AccountName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.AccountEmail" class="form-label">Email Address *</label>
                            <input asp-for="Input.AccountEmail" class="form-control" />
                            <span asp-validation-for="Input.AccountEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.CurrentPassword" class="form-label">Current Password *</label>
                            <input asp-for="Input.CurrentPassword" class="form-control" />
                            <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                            <small class="form-text text-muted">Required to save changes</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label">New Password</label>
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">Leave blank to keep current password</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Account Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Account ID:</dt>
                        <dd class="col-sm-8">@Model.CurrentAccount?.AccountID</dd>

                        <dt class="col-sm-4">Role:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">Staff</span>
                        </dd>

                        <dt class="col-sm-4">Member Since:</dt>
                        <dd class="col-sm-8">
                            @* This would typically come from a CreatedDate field *@
                            <span class="text-muted">N/A</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">My Statistics</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-8">Total News Created:</dt>
                        <dd class="col-sm-4">
                            <span class="badge bg-primary">@Model.TotalNewsCreated</span>
                        </dd>

                        <dt class="col-sm-8">Active News:</dt>
                        <dd class="col-sm-4">
                            <span class="badge bg-success">@Model.ActiveNewsCreated</span>
                        </dd>

                        <dt class="col-sm-8">Inactive News:</dt>
                        <dd class="col-sm-4">
                            <span class="badge bg-secondary">@Model.InactiveNewsCreated</span>
                        </dd>
                    </dl>
                    
                    <div class="mt-3">
                        <a href="/Staff/MyNews" class="btn btn-outline-primary btn-sm">View My News History</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show mt-3">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
