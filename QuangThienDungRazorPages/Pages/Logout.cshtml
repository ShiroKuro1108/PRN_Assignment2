@page
@model QuangThienDungRazorPages.Pages.LogoutModel
@{
    ViewData["Title"] = "Logout";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header text-center">
            <h2>Logging Out...</h2>
            <p>You are being logged out of the system.</p>
        </div>
        
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Please wait while we log you out...</p>
        </div>
    </div>
</div>

<script>
    // Auto-redirect to login page after a short delay
    setTimeout(function() {
        window.location.href = '/Login';
    }, 2000);
</script>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .login-card {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 400px;
    }

    .login-header h2 {
        color: #333;
        margin-bottom: 0.5rem;
    }

    .login-header p {
        color: #666;
        margin: 0;
    }
</style>
